(defwindow bar
  :stacking "fg"
  :windowtype "normal"
  :exclusive true
  :monitor 0
  :wm-ignore true
  :geometry (geometry :y "5px" :width "9%" :height "2.1%" :anchor "top center")
  (layout)
  )

(defwidget layout []
    (box :class "bar_class"
       :orientation "h"
  (timelabel)
    ))

(defwidget timelabel []
  (label 
            :text '[ ${time.hour}:${time.min}:${time.sec} ]')
)

(defpoll time :interval "1s"
  `date +'{"hour":"%H","min":"%M","sec":"%S"}'`)
